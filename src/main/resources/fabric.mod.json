{
  "schemaVersion": 1,
  "id": "npe",
  "version": "${mod_version}",

  "name": "No Prying Eyes",
  "description": "A simple Minecraft mod that aims to give the user control over the collection of their data in an attempt to free the game.",
  "authors": [
    "Daxanius",
    "TechPro424"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/no-prying-eyes",
    "sources": "https://github.com/Daxanius/NoPryingEyes",
    "issues": "https://github.com/Daxanius/NoPryingEyes/issues"
  },

  "license": "GNU GPLv3",
  "icon": "assets/npe/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.daxanius.npe.NoPryingEyes"
    ],
    "modmenu": [
      "me.daxanius.npe.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "npe.mixins.json"
  ],

  "depends": {
    "fabric-api": "*",
    "fabricloader": ">=${loader_version}",
    "minecraft": "=${minecraft_version}",
    "java": ">=17"
  },
  "suggests": {
    "cloth-config": ">=${cloth_version}",
    "modmenu": ">=${modmenu_version}"
  }
}
