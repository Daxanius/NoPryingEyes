{
  "schemaVersion": 1,
  "id": "npe",
  "version": "${version}",

  "name": "No Prying Eyes",
  "description": "A simple Minecraft mod that aims to give the user control over the collection of their data in an attempt to free the game.",
  "authors": [
    "Daxanius"
  ],
  "contact": {
    "homepage": "https://github.com/Daxanius",
    "sources": "https://github.com/Daxanius/NoPryingEyes",
    "issues": "https://www.curseforge.com/minecraft/mc-mods/no-prying-eyes"
  },

  "license": "GNU GPLv3",
  "icon": "assets/npe/icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "me.daxanius.npe.NoPryingEyes"
    ],
    "modmenu": [
      "me.daxanius.npe.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "npe.mixins.json"
  ],

  "depends": {
    "fabric-api": "*",
    "fabricloader": ">=0.14.17",
    "minecraft": "=1.20.2",
    "java": ">=17"
  },
  "suggests": {
    "cloth-config": ">=12.0.109",
    "modmenu": ">=8.0.0"
  }
}
